<% if logged_in? %>
 <div class="row">
  <aside class="col-md-4">
     <secion class="user_info">
        <%= render 'shared/user_info' %>
     </secion>
     <sectio class="micropost_form">
        <%= render 'shared/micropost_form' %>
     </sectio>
  </aside>
 </div>
<% else %>
 <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>
