<h1>Sign up</h1>

<div class="row">
  <div class="col-mid-6 col-mid-offset-3">
      
    <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.label :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "Comfimation" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
