<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
     </h1>
     <div class="col-md-12 col-md-offset-5">
       email : <%= @user.email %>
     </div>
     <div class="col-md-12 col-md-offset-5">
       location : <%= @user.location %>
     </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>

